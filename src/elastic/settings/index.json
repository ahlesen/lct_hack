{
  "settings": {
    "index": {
      "analysis": {
        "filter": {
          "stopword_lang": {
            "type": "stop",
            "stopwords_path": "dicts/stopwords/stopwords.txt"
          },
          "common_word_delimiter": {
            "split_on_numerics": true,
            "generate_word_parts": true,
            "preserve_original": true,
            "catenate_words": true,
            "split_on_case_change": true,
            "type": "word_delimiter_graph",
            "stem_english_possessive": false,
            "type_table": [
              ". => ALPHANUM",
              ", => ALPHANUM"
            ]
          },
          "english_morphology": {
            "name": "english",
            "type": "stemmer"
          },
          "protect_from_morph": {
            "type": "keyword_marker",
            "ignore_case": true,
            "keywords_path": "dicts/keywords/protect_ru_keywords.txt"
          },
          "morph_dict": {
            "type": "synonym",
            "lenient": true,
            "synonyms_path": "dicts/synodicts/morph.txt"
          },
          "synonyms_dict_index": {
            "type": "synonym",
            "lenient": false,
            "synonyms_path": "dicts/synodicts/synonyms.txt"
          },
          "common_grams": {
            "type": "common_grams",
            "query_mode":true,
            "common_words": [
              "для",
              "от",
              "против",
              "с",
              "без",
              "из",
              "на"
            ],
            "ignore_case": true
          }
        },
        "analyzer": {
          "common": {
            "filter": [
              "common_word_delimiter",
              "lowercase",
              "common_grams",
              "stopword_lang"
            ],
            "char_filter": [
              "single_char_filter"
            ],
            "type": "custom",
            "tokenizer": "standard"
          },
          "morph": {
            "filter": [
              "lowercase",
              "stopword_lang",
              "english_morphology",
              "morph_dict"
            ],
            "char_filter": [
              "single_char_filter"
            ],
            "type": "custom",
            "tokenizer": "standard"
          },
          "synonyms_index": {
            "filter": [
              "lowercase",
              "protect_from_morph",
              "english_morphology",
              "synonyms_dict_index"
            ],
            "char_filter": [
              "single_char_filter"
            ],
            "type": "custom",
            "tokenizer": "standard"
          },
          "common_simple": {
            "filter": [
              "lowercase"
            ],
            "char_filter": [
              "single_char_filter"
            ],
            "type": "custom",
            "tokenizer": "standard"
          }
        },
        "char_filter": {
          "single_char_filter": {
            "type": "mapping",
            "mappings": [
              "Ё=>Е",
              "ё=>е",
              "&=>_AND_",
              "#=>_HASH_",
              "+=>_PLUS_",
              ",=>.",
              "'=>’",
              "`=>’"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "doc_id": {
        "type": "long"
      },
      "embedding": {
        "type": "dense_vector",
        "dims":768,
        "index":true,
        "similarity":"cosine"
      },
      "text_hashtags": {
        "type": "text",
        "analyzer": "common",
        "fields": {
          "morph": {
            "type": "text",
            "analyzer": "morph"
          },
          "synonyms": {
            "type": "text",
            "analyzer": "synonyms_index"
          },
          "prefix_synonyms": {
            "analyzer": "synonyms_index",
            "search_analyzer": "common_simple",
            "type": "text"
          },
          "prefix_common": {
            "analyzer": "common_simple",
            "type": "text"
          }
        }
      },
      "video_hastags": {
        "type": "text",
        "analyzer": "common",
        "fields": {
          "morph": {
            "type": "text",
            "analyzer": "morph"
          },
          "synonyms": {
            "type": "text",
            "analyzer": "synonyms_index"
          },
          "prefix_synonyms": {
            "analyzer": "synonyms_index",
            "search_analyzer": "common_simple",
            "type": "text"
          },
          "prefix_common": {
            "analyzer": "common_simple",
            "type": "text"
          }
        }
      },
      "audio_transcription": {
        "type": "text",
        "analyzer": "common",
        "fields": {
          "morph": {
            "type": "text",
            "analyzer": "morph"
          },
          "synonyms": {
            "type": "text",
            "analyzer": "synonyms_index"
          }
        }
      },
      "song_name": {
        "type": "text",
        "analyzer": "common",
        "fields": {
          "prefix_common": {
            "analyzer": "common_simple",
            "type": "text"
          }
        }
      },
      "song_author": {
        "type": "text",
        "analyzer": "common",
        "fields": {
          "prefix_common": {
            "analyzer": "common_simple",
            "type": "text"
          }
        }
      }
    }
  }
}
